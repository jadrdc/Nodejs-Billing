<% layout('./public/layout') %>
    <div class="row">

        <div class="col-lg-6 col-md-offset-3">
            <form method="post">
                <h1>Agregar Articulo </h1>

                <div class="form-group">
                    <label> Descripcion </label>
                    <input type="text" name="descrip" class="form-control" required="true" />
                </div>

                <div class="form-group">
                    <label> Precio del Articulo </label>
                    <input type="number" name="price" class="form-control" required="true" min="1" />
                </div>
                <button type="submit" class="btn btn-success">Agregar Articulo </button>
                <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Ver Menu</a>
            </form>

        </div>
    </div>
