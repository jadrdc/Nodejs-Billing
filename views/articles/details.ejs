<% layout('./public/layout') %>
    <div class="bd-example">
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                        <h4 class="modal-title" id="exampleModalLabel">Actualizar Articulo</h4>
                    </div>
                    <div class="modal-body">
                        <form action="/updateArticle">

                            <div class="form-group" <input type="hidden" name="articleid" id="articleid" class="form-control" required="true" />
                    </div>

                    <div class="form-group">
                        <label> Description</label>
                        <input type="text" name="description" class="form-control" required="true" />
                    </div>

                    <div class="form-group">
                        <label> Precio</label>
                        <input type="number" name="price" class="form-control" required="true" min="0"/>
                    </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="update">Guardar </button>
                </div>
            </div>
        </div>
    </div>


    <div class="container padding 2000px ">
        <h2>Articulos </h2>
        <table class="table table-hover  table-bordered">
            <thead>
                <tr>
                    <th>
                    </th>

                    <th>
                        <input type="checkbox" id="allarticles" value="">
                    </th>
                    <th>Articulo</th>

                    <th>Precio </th>

                    <th>Modificar </th>
                </tr>
            </thead>
            <tbody>

                <% articles.forEach(function(value,index,arr){ %>
                    <tr>
                        <td><label><%= arr[index].id%></label></td>
                        <td>
                            <div class="checkbox">
                                <label><input type="checkbox" id="id" name="id" value="<%= arr[index].id %>"></label>
                            </div>
                        </td>
                        <td><label><%= arr[index].description%></label></td>

                        <td><label><%= arr[index].price%></label></td>


                        <td>
                            <button type="button" class="btn btn-success" id="updateArticle" data-toggle="modal" name="updateArticle" data-target="#exampleModal" data-whatever="@getbootstrap">Modificar</button>
                        </td>
                    </tr>
                    <%  }) %>
            </tbody>
        </table>
        <div ="container-fluid">
        <a class="btn btn-default" href="/addArticle" role="button">Agregar Articulos &raquo;</a>
        <button class="btn btn-danger" type="button" id="removearticles"> Eliminar Articulos  </button>
        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Ver Menu</a>    </div>


    </div>
